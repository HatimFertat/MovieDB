{
  "moviedb.users": {
    "transaction": true,
    "partition-key": ["userId"],
    "columns": {
      "userId": "INT",
      "username": "TEXT",
      "password": "TEXT",
      "email": "TEXT"
    }
  },
  "moviedb.movies": {
    "transaction": true,
    "partition-key": ["movieId"],
    "columns": {
      "movieId": "INT",
      "tmdb_id": "INT",
      "title": "TEXT",
      "release_date": "TEXT",
      "director": "TEXT",
      "cast": "TEXT",
      "synopsis": "TEXT",
      "genres": "TEXT"
    }
  },
  "moviedb.watchlist": {
    "transaction": true,
    "partition-key": ["userId"],
    "clustering-key": ["movieId"],
    "columns": {
      "userId": "INT",
      "movieId": "INT"
    }
  },
  "moviedb.watched": {
    "transaction": true,
    "partition-key": ["userId"],
    "clustering-key": ["movieId"],
    "columns": {
      "userId": "INT",
      "movieId": "INT"
    }
  },
  "moviedb.friends": {
    "transaction": true,
    "partition-key": ["userId"],
    "clustering-key": ["friendId"],
    "columns": {
      "userId": "INT",
      "friendId": "INT"
    }
  },
  "moviedb.friend_requests": {
    "transaction": true,
    "partition-key": ["requester_id"],
    "clustering-key": ["requestee_id"],
    "columns": {
        "requester_id": "INT",
        "requestee_id": "INT",
        "status": "TEXT" 
    }
  }
}
